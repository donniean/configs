{
  "name": "@donniean/configs",
  "version": "6.24.0",
  "description": "an opinionated configs generator",
  "keywords": [
    "cli",
    "autocorrect",
    "commitizen",
    "commitlint",
    "cspell",
    "editorconfig",
    "eslint",
    "gitattributes",
    "gitignore",
    "htmlhint",
    "husky",
    "knip",
    "lint-staged",
    "markdownlint",
    "npm-check-updates",
    "prettier",
    "sort-package-json",
    "stylelint",
    "tsc",
    "vitest"
  ],
  "homepage": "https://github.com/donniean/configs#readme",
  "bugs": {
    "url": "https://github.com/donniean/configs/issues"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/donniean/configs.git"
  },
  "license": "MIT",
  "author": "Donnie An",
  "type": "module",
  "exports": {
    ".": {
      "import": "./dist/index.js",
      "types": "./dist/index.d.ts"
    }
  },
  "main": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "bin": {
    "configs": "./bin/configs.js"
  },
  "files": [
    "assets",
    "bin",
    "dist"
  ],
  "scripts": {
    "prebuild": "npm run clean",
    "build": "tsup",
    "build:watch": "npm run build -- --watch",
    "changeset:add": "changeset add",
    "changeset:publish": "changeset publish",
    "changeset:version": "changeset version",
    "clean": "rimraf dist/",
    "commit": "cz",
    "knip": "knip",
    "link": "npm run build && npm link",
    "lint": "concurrently --group --timings --prefix-colors=auto \"npm:lint:*(!:fix)\"",
    "lint:cspell": "cspell lint --no-progress --relative --no-must-find-files --dot --gitignore \"**\"",
    "lint:eslint": "eslint \"**/*.{js,mjs,cjs,ts}\"",
    "lint:eslint:fix": "npm run lint:eslint -- --fix",
    "lint:fix": "concurrently --max-processes=1 --group --timings --prefix-colors=auto \"npm:lint:*:fix\"",
    "lint:markdownlint": "markdownlint --dot \"**/*.md\"",
    "lint:markdownlint:fix": "npm run lint:markdownlint -- --fix",
    "lint:prettier": "prettier --check --ignore-unknown \"**\"",
    "lint:prettier:fix": "prettier --write --ignore-unknown \"**\"",
    "lint:sort-package-json": "npm run lint:sort-package-json:fix -- --check",
    "lint:sort-package-json:fix": "sort-package-json",
    "lint:tsc": "tsc --noEmit",
    "ncu": "ncu --deep",
    "ncu:upgrade": "npm run ncu -- --upgrade",
    "pre-commit": "lint-staged --concurrent false",
    "prepare": "husky",
    "test": "vitest run",
    "test:coverage": "vitest run --coverage",
    "test:watch": "vitest watch"
  },
  "dependencies": {
    "chalk": "^5.4.1",
    "clean-deep": "^3.4.0",
    "commander": "^13.1.0",
    "cosmiconfig": "^9.0.0",
    "date-fns": "^4.1.0",
    "fs-extra": "^11.3.0",
    "javascript-stringify": "^2.1.0",
    "latest-version": "^9.0.0",
    "lodash-es": "^4.17.21",
    "micromatch": "^4.0.8",
    "nanoid": "^5.1.5",
    "ora": "^8.2.0",
    "parse-glob": "^3.0.4",
    "prettier": "^3.5.3",
    "prompts": "^2.4.2",
    "shelljs": "^0.10.0",
    "sort-object-keys": "^1.1.3",
    "sort-package-json": "^3.2.1",
    "stylelint": "^16.19.1",
    "type-fest": "^4.41.0"
  },
  "devDependencies": {
    "@changesets/changelog-github": "^0.5.1",
    "@changesets/cli": "^2.29.4",
    "@commitlint/cli": "^19.8.1",
    "@commitlint/config-conventional": "^19.8.1",
    "@eslint-community/eslint-plugin-eslint-comments": "^4.5.0",
    "@eslint/js": "^9.26.0",
    "@tsconfig/node-lts": "^22.0.1",
    "@types/fs-extra": "^11.0.4",
    "@types/lodash-es": "^4.17.12",
    "@types/micromatch": "^4.0.9",
    "@types/node": "^22.15.17",
    "@types/parse-glob": "^3.0.32",
    "@types/prompts": "^2.4.9",
    "@types/shelljs": "^0.8.16",
    "@types/sort-object-keys": "^1.1.3",
    "@vitest/coverage-v8": "^3.1.3",
    "@vitest/eslint-plugin": "^1.1.44",
    "commitizen": "^4.3.1",
    "concurrently": "^9.1.2",
    "cspell": "^9.0.1",
    "cz-conventional-changelog": "^3.3.0",
    "eslint": "^9.26.0",
    "eslint-config-prettier": "^10.1.5",
    "eslint-import-resolver-typescript": "^4.3.4",
    "eslint-plugin-import-x": "^4.11.1",
    "eslint-plugin-n": "^17.18.0",
    "eslint-plugin-promise": "^7.2.1",
    "eslint-plugin-simple-import-sort": "^12.1.1",
    "eslint-plugin-sonarjs": "^3.0.2",
    "eslint-plugin-unicorn": "^59.0.1",
    "eslint-plugin-unused-imports": "^4.1.4",
    "globals": "^16.1.0",
    "husky": "^9.1.7",
    "knip": "^5.55.1",
    "lint-staged": "^16.0.0",
    "markdownlint-cli": "^0.44.0",
    "npm-check-updates": "^18.0.1",
    "prettier": "^3.5.3",
    "rimraf": "^6.0.1",
    "sort-package-json": "^3.2.1",
    "tsup": "^8.4.0",
    "typescript": "^5.8.3",
    "typescript-eslint": "^8.32.1",
    "vitest": "^3.1.3"
  },
  "engines": {
    "node": ">=22.0.0"
  }
}
