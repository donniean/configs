{
  "name": "@donniean/configs",
  "version": "6.20.0",
  "description": "an opinionated configs generator",
  "keywords": [
    "cli",
    "commitizen",
    "commitlint",
    "cspell",
    "editorconfig",
    "eslint",
    "gitattributes",
    "gitignore",
    "htmlhint",
    "husky",
    "lint-staged",
    "markdownlint",
    "prettier",
    "sort-package-json",
    "stylelint",
    "tsc"
  ],
  "homepage": "https://github.com/donniean/configs#readme",
  "bugs": {
    "url": "https://github.com/donniean/configs/issues"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/donniean/configs.git"
  },
  "license": "MIT",
  "author": "Donnie An",
  "type": "module",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.ts"
    },
    "./package.json": "./package.json"
  },
  "types": "./dist/index.d.ts",
  "bin": {
    "configs": "./bin/configs.js"
  },
  "files": [
    "assets",
    "bin",
    "dist"
  ],
  "scripts": {
    "prebuild": "npm run clean",
    "build": "tsc && tsc-alias",
    "postbuild": "npm run build-fix",
    "build-fix": "tsc-esm-fix --target='dist/'",
    "build:watch": "npm run clean && tsc --watch & tsc-alias --watch & nodemon --exec 'npm run build-fix'",
    "clean": "rimraf ./dist/",
    "commit": "cz",
    "lint:cspell": "cspell lint --no-progress --relative --no-must-find-files --dot --gitignore \"**\"",
    "lint:eslint": "eslint \"**/*.{js,mjs,cjs,ts}\"",
    "lint:eslint:fix": "eslint --fix \"**/*.{js,mjs,cjs,ts}\"",
    "lint:markdownlint": "markdownlint --dot \"**/*.md\"",
    "lint:markdownlint:fix": "markdownlint --dot --fix \"**/*.md\"",
    "lint:prettier": "prettier --check --ignore-unknown \"**\"",
    "lint:prettier:fix": "prettier --write --ignore-unknown \"**\"",
    "lint:sort-package-json": "sort-package-json --check",
    "lint:sort-package-json:fix": "sort-package-json",
    "lint:tsc": "tsc --noEmit",
    "pre-commit": "lint-staged --concurrent false",
    "prepare": "husky",
    "semantic-release": "semantic-release",
    "test": "vitest run",
    "test:coverage": "vitest run --coverage",
    "test:watch": "vitest watch"
  },
  "dependencies": {
    "chalk": "^5.3.0",
    "clean-deep": "^3.4.0",
    "commander": "^12.0.0",
    "cosmiconfig": "^9.0.0",
    "date-fns": "^3.6.0",
    "deepmerge": "^4.3.1",
    "eslint": "^8.57.0",
    "eslint-config-airbnb-base": "^15.0.0",
    "fs-extra": "^11.2.0",
    "javascript-stringify": "^2.1.0",
    "latest-version": "^9.0.0",
    "lodash-es": "^4.17.21",
    "micromatch": "^4.0.5",
    "nanoid": "^5.0.6",
    "ora": "^8.0.1",
    "parse-glob": "^3.0.4",
    "prettier": "^3.2.5",
    "prompts": "^2.4.2",
    "shelljs": "^0.8.5",
    "sort-object-keys": "^1.1.3",
    "sort-package-json": "^2.10.0",
    "stylelint": "^16.3.1",
    "type-fest": "^4.15.0"
  },
  "devDependencies": {
    "@commitlint/cli": "^19.2.1",
    "@commitlint/config-conventional": "^19.1.0",
    "@semantic-release/changelog": "^6.0.3",
    "@semantic-release/exec": "^6.0.3",
    "@semantic-release/git": "^10.0.1",
    "@tsconfig/node-lts": "^20.1.3",
    "@types/eslint": "^8.56.7",
    "@types/fs-extra": "^11.0.4",
    "@types/lodash-es": "^4.17.12",
    "@types/micromatch": "^4.0.6",
    "@types/parse-glob": "^3.0.32",
    "@types/prompts": "^2.4.9",
    "@types/shelljs": "^0.8.15",
    "@types/sort-object-keys": "^1.1.3",
    "@typescript-eslint/eslint-plugin": "^7.5.0",
    "@typescript-eslint/parser": "^7.5.0",
    "@vitest/coverage-v8": "^1.4.0",
    "commitizen": "^4.3.0",
    "cspell": "^8.6.1",
    "cz-conventional-changelog": "^3.3.0",
    "eslint": "^8.57.0",
    "eslint-config-airbnb-base": "^15.0.0",
    "eslint-config-airbnb-typescript": "^18.0.0",
    "eslint-config-prettier": "^9.1.0",
    "eslint-import-resolver-typescript": "^3.6.1",
    "eslint-plugin-eslint-comments": "^3.2.0",
    "eslint-plugin-import": "^2.29.1",
    "eslint-plugin-n": "^17.0.0",
    "eslint-plugin-promise": "^6.1.1",
    "eslint-plugin-simple-import-sort": "^12.0.0",
    "eslint-plugin-sonarjs": "^0.25.1",
    "eslint-plugin-unicorn": "^52.0.0",
    "eslint-plugin-vitest": "^0.4.1",
    "husky": "^9.0.11",
    "lint-staged": "^15.2.2",
    "markdownlint-cli": "^0.39.0",
    "nodemon": "^3.1.0",
    "prettier": "^3.2.5",
    "rimraf": "^5.0.5",
    "semantic-release": "^23.0.7",
    "sort-package-json": "^2.10.0",
    "tsc-alias": "^1.8.8",
    "tsc-esm-fix": "^2.20.26",
    "typescript": "^5.4.4",
    "vitest": "^1.4.0"
  },
  "engines": {
    "node": ">=20.0.0"
  }
}
