{
  "name": "@donniean/configs",
  "version": "6.24.1",
  "description": "an opinionated configs generator",
  "keywords": [
    "cli",
    "autocorrect",
    "commitlint",
    "cspell",
    "editorconfig",
    "eslint",
    "gitattributes",
    "gitignore",
    "htmlhint",
    "husky",
    "knip",
    "lint-staged",
    "markdownlint",
    "npm-check-updates",
    "prettier",
    "sort-package-json",
    "stylelint",
    "tsc",
    "vitest"
  ],
  "homepage": "https://github.com/donniean/configs#readme",
  "bugs": {
    "url": "https://github.com/donniean/configs/issues"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/donniean/configs.git"
  },
  "license": "MIT",
  "author": "Donnie An",
  "type": "module",
  "exports": {
    ".": {
      "import": "./dist/index.js",
      "types": "./dist/index.d.ts"
    }
  },
  "main": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "bin": {
    "configs": "./bin/configs.js"
  },
  "files": [
    "assets",
    "bin",
    "dist"
  ],
  "scripts": {
    "prebuild": "npm run clean",
    "build": "tsup",
    "build:watch": "npm run build -- --watch",
    "changeset:add": "changeset add",
    "changeset:publish": "changeset publish",
    "changeset:version": "changeset version",
    "clean": "rimraf dist/",
    "docs": "npx tsx src/markdown/",
    "postdocs": "prettier --write $npm_package_config_docsFilePath",
    "knip": "knip",
    "knip:fix": "npm run knip -- --fix",
    "link": "npm run build && npm link",
    "lint": "concurrently --group --timings --prefix-colors=auto \"npm:lint:*(!:fix)\"",
    "lint:fix": "concurrently --max-processes=1 --group --timings --prefix-colors=auto \"npm:lint:*:fix\"",
    "lint:format": "prettier --check --ignore-unknown .",
    "lint:format:fix": "prettier --write --ignore-unknown .",
    "lint:js": "eslint",
    "lint:js:fix": "npm run lint:js -- --fix",
    "lint:md": "markdownlint --dot \"**/*.md\"",
    "lint:md:fix": "npm run lint:md -- --fix",
    "lint:package-json": "npm run lint:package-json:fix -- --check",
    "lint:package-json:fix": "npx sort-package-json \"**/package.json\" --ignore \"**/node_modules/**/package.json\" --ignore \"**/dist/**/package.json\"",
    "lint:spell": "cspell lint --no-progress --no-must-find-files --dot --gitignore .",
    "lint:text": "autocorrect --lint",
    "lint:text:fix": "autocorrect --fix",
    "lint:types": "tsc --noEmit",
    "ncu": "npx npm-check-updates --deep",
    "ncu:upgrade": "npm run ncu -- --upgrade",
    "prepare": "husky",
    "test": "vitest run",
    "test:coverage": "vitest run --coverage",
    "test:watch": "vitest watch"
  },
  "config": {
    "docsFilePath": "README.md"
  },
  "dependencies": {
    "@inquirer/prompts": "^7.5.3",
    "chalk": "^5.4.1",
    "clipboardy": "^4.0.0",
    "commander": "^14.0.0",
    "date-fns": "^4.1.0",
    "fs-extra": "^11.3.0",
    "json2md": "^2.0.3",
    "prettier": "^3.5.3",
    "remark": "^15.0.1",
    "remark-toc": "^9.0.0",
    "type-fest": "^4.41.0",
    "zod": "^3.25.51"
  },
  "devDependencies": {
    "@changesets/changelog-github": "^0.5.1",
    "@changesets/cli": "^2.29.4",
    "@commitlint/cli": "^19.8.1",
    "@commitlint/config-conventional": "^19.8.1",
    "@eslint-community/eslint-plugin-eslint-comments": "^4.5.0",
    "@eslint/compat": "^1.2.9",
    "@eslint/js": "^9.28.0",
    "@types/fs-extra": "^11.0.4",
    "@types/json2md": "^1.5.4",
    "@types/node": "^22.15.29",
    "@vitest/coverage-v8": "^3.2.1",
    "@vitest/eslint-plugin": "^1.2.1",
    "autocorrect-node": "^2.14.0",
    "concurrently": "^9.1.2",
    "cspell": "^9.0.2",
    "eslint": "^9.28.0",
    "eslint-config-prettier": "^10.1.5",
    "eslint-import-resolver-typescript": "^4.4.2",
    "eslint-plugin-import-x": "^4.15.0",
    "eslint-plugin-n": "^17.19.0",
    "eslint-plugin-promise": "^7.2.1",
    "eslint-plugin-simple-import-sort": "^12.1.1",
    "eslint-plugin-sonarjs": "^3.0.2",
    "eslint-plugin-unicorn": "^59.0.1",
    "eslint-plugin-unused-imports": "^4.1.4",
    "globals": "^16.2.0",
    "husky": "^9.1.7",
    "knip": "^5.60.0",
    "lint-staged": "^16.1.0",
    "markdownlint-cli": "^0.45.0",
    "npm-check-updates": "^18.0.1",
    "prettier": "^3.5.3",
    "rimraf": "^6.0.1",
    "sort-package-json": "^3.2.1",
    "tsup": "^8.5.0",
    "typescript": "^5.8.3",
    "typescript-eslint": "^8.33.1",
    "vitest": "^3.2.1"
  },
  "engines": {
    "node": ">=22.0.0"
  }
}
