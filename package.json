{
  "name": "@donniean/configs",
  "version": "4.0.0-alpha.1",
  "description": "configs generator",
  "keywords": [
    "cli",
    "commitizen",
    "commitlint",
    "cspell",
    "editorconfig",
    "eslint",
    "gitattributes",
    "gitignore",
    "htmlhint",
    "husky",
    "lint-staged",
    "markdownlint",
    "prettier",
    "sort-package-json",
    "stylelint",
    "tsc"
  ],
  "homepage": "https://github.com/donniean/configs#readme",
  "bugs": {
    "url": "https://github.com/donniean/configs/issues"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/donniean/configs.git"
  },
  "license": "MIT",
  "author": "Donnie An",
  "main": "lib/index.js",
  "bin": {
    "configs": "./bin/configs.js"
  },
  "files": [
    "lib",
    "bin"
  ],
  "scripts": {
    "prebuild": "npm run clean",
    "build": "tsc && tsc-alias",
    "build:watch": "npm run clean && tsc --watch & tsc-alias --watch",
    "clean": "rimraf ./lib/",
    "commit": "git-cz",
    "lint:cspell": "cspell --no-must-find-files \"**\"",
    "lint:eslint": "eslint \"**/*.{js,ts}\"",
    "lint:eslint:fix": "eslint --fix \"**/*.{js,ts}\"",
    "lint:tsc": "tsc --noEmit",
    "pre-commit": "lint-staged",
    "prepare": "husky install",
    "prettier": "prettier --write \"**/*.{js,ts,json,md}\"",
    "pub": "npm run release && npm publish --access public",
    "release": "standard-version",
    "semantic-release": "semantic-release"
  },
  "config": {
    "commitizen": {
      "path": "cz-conventional-changelog"
    }
  },
  "dependencies": {
    "chalk": "^4.1.2",
    "clean-deep": "^3.4.0",
    "commander": "^10.0.0",
    "cosmiconfig": "^8.1.3",
    "date-fns": "^2.29.3",
    "fs-extra": "^11.1.1",
    "latest-version": "^5.1.0",
    "lodash": "^4.17.21",
    "ora": "^5.4.1",
    "prettier": "^2.8.7",
    "prompts": "^2.4.2",
    "shelljs": "^0.8.5",
    "sort-package-json": "^2.4.1",
    "type-fest": "^3.8.0"
  },
  "devDependencies": {
    "@babel/core": "^7.21.4",
    "@babel/eslint-parser": "^7.21.3",
    "@commitlint/cli": "^17.5.1",
    "@commitlint/config-conventional": "^17.4.4",
    "@semantic-release/git": "^10.0.1",
    "@tsconfig/node-lts": "^18.12.1",
    "@tsconfig/node-lts-strictest": "^18.12.1",
    "@tsconfig/strictest": "^2.0.0",
    "@types/fs-extra": "^11.0.1",
    "@types/lodash": "^4.14.192",
    "@types/prettier": "^2.7.2",
    "@types/prompts": "^2.4.4",
    "@types/shelljs": "^0.8.11",
    "@typescript-eslint/eslint-plugin": "^5.58.0",
    "@typescript-eslint/parser": "^5.58.0",
    "commitizen": "^4.3.0",
    "cspell": "^6.31.1",
    "cz-conventional-changelog": "^3.3.0",
    "eslint": "^8.38.0",
    "eslint-config-airbnb-base": "^15.0.0",
    "eslint-config-airbnb-typescript": "^17.0.0",
    "eslint-config-prettier": "^8.8.0",
    "eslint-import-resolver-typescript": "^3.5.5",
    "eslint-plugin-eslint-comments": "^3.2.0",
    "eslint-plugin-import": "^2.27.5",
    "eslint-plugin-prettier": "^4.2.1",
    "eslint-plugin-promise": "^6.1.1",
    "eslint-plugin-simple-import-sort": "^10.0.0",
    "eslint-plugin-sonarjs": "^0.19.0",
    "eslint-plugin-unicorn": "^46.0.0",
    "husky": "^8.0.3",
    "lint-staged": "^13.2.1",
    "rimraf": "^5.0.0",
    "semantic-release": "^21.0.1",
    "standard-version": "^9.5.0",
    "tsc-alias": "^1.8.5",
    "typescript": "^5.0.4"
  }
}
