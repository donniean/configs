{
  "name": "@donniean/configs",
  "version": "4.0.0",
  "description": "",
  "keywords": [
    "cli",
    "commitizen",
    "commitlint",
    "cspell",
    "editorconfig",
    "eslint",
    "gitattributes",
    "gitignore",
    "htmlhint",
    "husky",
    "lint-staged",
    "markdownlint",
    "prettier",
    "stylelint",
    "tsc"
  ],
  "homepage": "https://github.com/donniean/configs#readme",
  "bugs": {
    "url": "https://github.com/donniean/configs/issues"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/donniean/configs.git"
  },
  "license": "MIT",
  "author": "Donnie An",
  "main": "lib/index.js",
  "bin": {
    "configs": "./bin/configs.js"
  },
  "files": [
    "lib",
    "bin"
  ],
  "scripts": {
    "prebuild": "npm run clean",
    "build": "tsc && tsc-alias",
    "build:watch": "npm run clean && tsc --watch & tsc-alias --watch",
    "clean": "rimraf ./lib/",
    "commit": "git-cz",
    "dev": "ts-node ./src/index.ts",
    "lint:cspell": "cspell \"**\"",
    "lint:eslint": "eslint \"**/*.{js,ts}\"",
    "lint:eslint:fix": "eslint --fix \"**/*.{js,ts}\"",
    "lint:tsc": "tsc --noEmit",
    "pre-commit": "lint-staged",
    "prepare": "husky install",
    "prettier": "prettier --write \"**/*.{js,ts,json,md}\"",
    "pub": "npm run release &&  npm publish --access public",
    "release": "standard-version"
  },
  "config": {
    "commitizen": {
      "path": "cz-conventional-changelog"
    }
  },
  "dependencies": {
    "chalk": "^4.1.2",
    "cosmiconfig": "^8.0.0",
    "fs-extra": "^11.1.0",
    "inquirer": "^8.2.5",
    "latest-version": "^7.0.0",
    "lodash": "^4.17.21",
    "ora": "^6.1.2",
    "prettier": "^2.8.4",
    "read-pkg": "^7.1.0",
    "sort-object-keys": "^1.1.3",
    "sort-package-json": "^2.4.1",
    "write-pkg": "^5.1.0",
    "yargs": "^17.7.1"
  },
  "devDependencies": {
    "@babel/core": "^7.21.0",
    "@babel/eslint-parser": "^7.19.1",
    "@commitlint/cli": "^17.4.4",
    "@commitlint/config-conventional": "^17.4.4",
    "@tsconfig/node-lts-strictest": "^18.12.1",
    "@types/fs-extra": "^11.0.1",
    "@types/prettier": "^2.7.2",
    "@types/yargs": "^17.0.22",
    "@typescript-eslint/eslint-plugin": "^5.53.0",
    "@typescript-eslint/parser": "^5.53.0",
    "commitizen": "^4.3.0",
    "cspell": "^6.26.3",
    "cz-conventional-changelog": "^3.3.0",
    "eslint": "^8.34.0",
    "eslint-config-airbnb-base": "^15.0.0",
    "eslint-config-airbnb-typescript": "^17.0.0",
    "eslint-config-prettier": "^8.6.0",
    "eslint-import-resolver-typescript": "^3.5.3",
    "eslint-plugin-eslint-comments": "^3.2.0",
    "eslint-plugin-import": "^2.27.5",
    "eslint-plugin-prettier": "^4.2.1",
    "eslint-plugin-promise": "^6.1.1",
    "eslint-plugin-simple-import-sort": "^10.0.0",
    "eslint-plugin-sonarjs": "^0.18.0",
    "eslint-plugin-unicorn": "^45.0.2",
    "husky": "^8.0.3",
    "lint-staged": "^13.1.2",
    "rimraf": "^4.1.2",
    "standard-version": "^9.5.0",
    "ts-node": "^10.9.1",
    "tsc-alias": "^1.8.2",
    "tsconfig-paths": "^4.1.2",
    "typescript": "^4.9.5"
  }
}
