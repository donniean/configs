{
  "name": "@donniean/configs",
  "version": "4.0.0",
  "description": "",
  "keywords": [
    "cli",
    "commitizen",
    "commitlint",
    "cspell",
    "editorconfig",
    "eslint",
    "gitattributes",
    "gitignore",
    "htmlhint",
    "husky",
    "lint-staged",
    "markdownlint",
    "prettier",
    "stylelint",
    "tsc"
  ],
  "homepage": "https://github.com/donniean/configs#readme",
  "bugs": {
    "url": "https://github.com/donniean/configs/issues"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/donniean/configs.git"
  },
  "license": "MIT",
  "author": "Donnie An",
  "main": "lib/index.js",
  "bin": {
    "configs": "./bin/configs.js"
  },
  "files": [
    "lib",
    "bin"
  ],
  "scripts": {
    "dev": "ts-node ./src/index.ts",
    "build": "tsc --project tsconfig.build.json && tsc-alias --project tsconfig.build.json",
    "build:watch": "tsc --project tsconfig.build.json --watch & tsc-alias --project tsconfig.build.json --watch",
    "prettier": "prettier --write \"**/*.{js,ts,json,md}\"",
    "lint:tsc": "tsc --noEmit",
    "lint:eslint:fix": "eslint --fix \"**/*.{js,ts}\"",
    "lint:cspell": "cspell \"**\"",
    "prepare": "husky install",
    "pre-commit": "lint-staged",
    "commit": "git-cz",
    "release": "standard-version",
    "pub": "npm run release &&  npm publish --access public"
  },
  "config": {
    "commitizen": {
      "path": "cz-conventional-changelog"
    }
  },
  "dependencies": {
    "chalk": "^4.1.2",
    "cosmiconfig": "^7.0.1",
    "fs-extra": "^10.0.1",
    "inquirer": "^8.2.2",
    "latest-version": "^6.0.0",
    "lodash": "^4.17.21",
    "ora": "^6.1.0",
    "prettier": "^2.6.1",
    "read-pkg": "^7.1.0",
    "sort-object-keys": "^1.1.3",
    "sort-package-json": "^1.55.0",
    "write-pkg": "^5.1.0",
    "yargs": "^17.4.0"
  },
  "devDependencies": {
    "@babel/core": "^7.17.8",
    "@babel/eslint-parser": "^7.17.0",
    "@commitlint/cli": "^16.2.3",
    "@commitlint/config-conventional": "^16.2.1",
    "@tsconfig/node16": "^1.0.2",
    "@types/yargs": "^17.0.10",
    "@typescript-eslint/eslint-plugin": "^5.17.0",
    "@typescript-eslint/parser": "^5.17.0",
    "commitizen": "^4.2.4",
    "cspell": "^5.19.5",
    "cz-conventional-changelog": "^3.3.0",
    "eslint": "^8.12.0",
    "eslint-config-airbnb-base": "^15.0.0",
    "eslint-config-airbnb-typescript": "^16.2.0",
    "eslint-config-prettier": "^8.5.0",
    "eslint-import-resolver-typescript": "^2.7.0",
    "eslint-plugin-eslint-comments": "^3.2.0",
    "eslint-plugin-import": "^2.25.4",
    "eslint-plugin-node": "^11.1.0",
    "eslint-plugin-prettier": "^4.0.0",
    "eslint-plugin-promise": "^6.0.0",
    "eslint-plugin-simple-import-sort": "^7.0.0",
    "eslint-plugin-unicorn": "^42.0.0",
    "husky": "^7.0.4",
    "lint-staged": "^12.3.7",
    "standard-version": "^9.3.2",
    "ts-node": "^10.7.0",
    "tsc-alias": "^1.6.5",
    "tsconfig-paths": "^3.14.1",
    "typescript": "^4.6.3"
  }
}
